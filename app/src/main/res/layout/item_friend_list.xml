<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="18dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_friend_item_profile"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_suho"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.cornerSize40Percent" />

    <TextView
        android:id="@+id/friendRV_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_friend_item_profile"
        app:layout_constraintStart_toEndOf="@id/iv_friend_item_profile"
        app:layout_constraintTop_toTopOf="@id/iv_friend_item_profile"
        tools:text="손수호" />

    <TextView
        android:id="@+id/friendRV_tv_status_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/friendRV_tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/friendRV_tv_name"
        app:layout_constraintTop_toTopOf="@id/friendRV_tv_name"
        tools:text="나랑 썰매 대결 할 사람 ㅋ 자신 없으면 말고 ㅋ" />

</androidx.constraintlayout.widget.ConstraintLayout>