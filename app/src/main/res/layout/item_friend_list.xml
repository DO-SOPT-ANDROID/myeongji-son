<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="18dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/friendRV_iv_profile"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_suho"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.cornerSize40Percent" />

    <TextView
        android:id="@+id/friendRV_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/friendRV_iv_profile"
        app:layout_constraintStart_toEndOf="@id/friendRV_iv_profile"
        app:layout_constraintTop_toTopOf="@id/friendRV_iv_profile"
        tools:text="SOPT YB 손수호" />

</androidx.constraintlayout.widget.ConstraintLayout>