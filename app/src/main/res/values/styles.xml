<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="boxStrokeColor">@color/green</item>
        <item name="hintTextColor">@color/green</item>
        <item name="cursorColor">@color/green</item>

        <!--Error-->
        <item name="errorEnabled">true</item>
        <item name="colorError">@color/red</item>
        <item name="errorIconDrawable">@android:color/transparent</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
    </style>

    <style name="ErrorTextAppearance">
        <item name="android:textStyle">italic</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>